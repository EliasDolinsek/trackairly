<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dolinsek.elias.trackairly.ui.controller.StatisticsNavigationController">
    <top>
        <HBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER">
            <children>
                <ToggleButton fx:id="btnOverview" mnemonicParsing="false" selected="true" text="OVERVIEW" />
                <ToggleButton fx:id="btnDays" mnemonicParsing="false" text="DAYS" />
                <ToggleButton fx:id="btnMonths" mnemonicParsing="false" text="MONTHS" />
                <ToggleButton fx:id="btnYears" mnemonicParsing="false" text="YEARS" />
            <Separator orientation="VERTICAL" />
            <Button fx:id="btnRefresh" mnemonicParsing="false" text="REFRESH">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@refresh_black_36dp.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            </children>
            <padding>
                <Insets bottom="16.0" />
            </padding>
        </HBox>
    </top>
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
</BorderPane>
