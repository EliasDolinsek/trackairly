<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dolinsek.elias.trackairly.ui.controller.HomeController">
   <center>
      <VBox alignment="CENTER">
         <children>
            <Text fx:id="txtTime" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font size="48.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="TODAY" />
            <Button fx:id="btnTracking" mnemonicParsing="false" style="-fx-background-color: #002984; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 0);" textFill="WHITE">
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="8.0" style="-fx-background-radius: 8 8 8 8; -fx-background-color: #002984; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0);">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="trackairly is able to run in background. you can re-open it in the tray-menu" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnHide" mnemonicParsing="false" style="-fx-background-color: white;" text="HIDE NOW">
            </Button>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
